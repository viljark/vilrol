<!DOCTYPE html>
<html>
	<head>
		<title>Vilrol</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="navbar">
			<div class="navbar-inner">
				<div class="container">
					<ul class="nav">
						<a class="brand" href="/">VILROL</a>
						<li>
							<a href="/">Home</a>
						</li>
						<li>
							<a href="#">Link</a>
						</li>
						<li>
							<a href="#">Link</a>
						</li>
						<li class="dropdown" id ="Menu1">
							<a class="dropdown-toggle" data-toggle="dropdown" href ="#Menu1"> Offers <b class="caret"></b> </a>
							<ul class="dropdown-menu">
								<li>
									<a href="/offers">All offers</a>
								</li>
								<li>
									<a href="/popular-offers">Popular</a>
								</li>
								<li>
									<a href="#">Ended offers</a>
								</li>
								<% if user_signed_in? && current_user.is_provider? %> <li class="divider"></li>
								<li>
									<a href="/offers/new">Create an offer</a>
								</li>
								<li>
									<a href="/offers?filter=mine">Your offers</a>
								</li>
								<%end%>
							</ul>
						</li>
						<% if user_signed_in? -%>
						<li class="account dropdown" id ="Menu2">
							<a class="dropdown-toggle" data-toggle="dropdown" href ="#Menu2"> <span>Account</span> <b class="caret"></b> </a>
							<ul class="dropdown-menu">
								<li>
									<a href="/purchases"><i class="icon-shopping-cart"></i> My purchases</a>
								</li>
								<li>
									<a href="/users/edit"><i class="icon-user"></i> Profile</a>
								</li>
								<li>
									<a href="#"><i class="icon-cog"></i> Settings</a>
								</li>
								<li class="divider"></li>
								<li>
									<a href="/signout"><i class="icon-off"></i> Logout</a>
								</li>
							</ul>
						</li>
						<% end -%>
						<% if user_signed_in? == false %> <a class="pull-left btn btn-primary btn-medium" href="/signin" >Sign in</a>
						<a class="pull-right btn btn-warning btn-medium" href="/register" >Register</a>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
		<div class="main well">
			<div class="wrap">
				<div class="content clearfix">
					<% if notice != nil%>
					<div class="alert alert-success">
						<span><%= notice %></span>
					</div>
					<% end-%>
					<% if alert != nil%>
					<div class="alert alert-error">
						<span><%= alert %></span>
					</div>
					<% end-%>
					<%= yield %>
				</div>
			</div>
		</div>
	</body>
</html>
