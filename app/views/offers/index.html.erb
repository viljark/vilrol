<h2>All available offers</h2>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Provider</th>
    <th>Name</th>
    <th>Description</th>
    <th>Count</th>
    <th>Price</th>
    <th>Start date</th>
    <th>End date</th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.provider_id %></td>
    <td><%= offer.name %></td>
    <td><%= offer.description %></td>
    <td><%= offer.count %></td>
    <td><%= offer.price %></td>
    <td><%= offer.start_date %></td>
    <td><%= offer.end_date %></td>
    <td><a class="btn btn-mini btn-info" href="<%= url_for offer %>">Show</a></td>
    <td><%if offer.provider_id == current_user.id%>
    <a class="btn btn-mini btn-warning" href="<%= url_for edit_offer_path(offer) %>">Edit</a>
    <% end%>
    </td>
  </tr>
<% end %>
</table>