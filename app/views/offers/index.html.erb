<h1>Listing offers</h1>

<table>
  <tr>
    <th>Provider</th>
    <th>Name</th>
    <th>Description</th>
    <th>Count</th>
    <th>Price</th>
    <th>Start date</th>
    <th>End date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.provider_id %></td>
    <td><%= offer.name %></td>
    <td><%= offer.description %></td>
    <td><%= offer.count %></td>
    <td><%= offer.price %></td>
    <td><%= offer.start_date %></td>
    <td><%= offer.end_date %></td>
    <td><%= link_to 'Show', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>